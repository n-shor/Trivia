<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:GUI.Converters"
             x:Class="GUI.JoinRoomPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Padding="20">
        <Label Text="Join Room" />

        <ListView x:Name="RoomsListView" ItemSelected="OnRoomSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgroundColor="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}">
                            <Label Text="{Binding DisplayText}" TextColor="White"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="JoinButton" Text="Join" Clicked="OnJoinButtonClicked" IsEnabled="false"/>

        <Label x:Name="PlayersLabel" Text=""/>
        <Label x:Name="AdminLabel" Text=""/>
    </StackLayout>
</ContentPage>
