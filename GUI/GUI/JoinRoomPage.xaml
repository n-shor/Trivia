<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:GUI.Converters"
             x:Class="GUI.JoinRoomPage"
             NavigationPage.HasBackButton="False">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Padding="20">
        <Label Text="Join Room" />
        <ScrollView>
            <StackLayout x:Name="RoomsStackLayout" />
        </ScrollView>
        <Button x:Name="JoinButton" Text="Join" Clicked="OnJoinButtonClicked" IsEnabled="false"/>
        <Button x:Name="RefreshButton" Text="Refresh" Clicked="OnRefreshButtonClicked"/>
        <Button Text="Back" Clicked="OnBackButtonClicked"/>
    </StackLayout>
</ContentPage>
