<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.PersonalStatisticsPage"
             NavigationPage.HasBackButton="False"
             BackgroundImageSource="Resources/personalStatisticsPageBG.jpg">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <StackLayout Padding="20">
        <Label Text="Personal Statistics" TextColor="White"/>
        <ListView x:Name="PersonalStatsList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" TextColor="White"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Back" Clicked="OnBackButtonClicked" TextColor="White"/>
    </StackLayout>
</ContentPage>
