<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.PersonalStatisticsPage"
             NavigationPage.HasBackButton="False"
             BackgroundImageSource="Resources/personalStatisticsPageBG.jpg">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <StackLayout Padding="20">
        <Label Text="Personal Statistics" 
               TextColor="White"
               FontSize="30"/>
        <ListView x:Name="PersonalStatsList"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell IsEnabled="False">
                        <Label Text="{Binding .}" 
                               TextColor="White"
                               FontSize="24"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Back" Clicked="OnBackButtonClicked" BackgroundColor="MediumBlue" TextColor="White"/>
    </StackLayout>
</ContentPage>
