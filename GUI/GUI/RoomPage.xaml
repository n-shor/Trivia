<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.RoomPage"
             NavigationPage.HasBackButton="False">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <StackLayout Padding="20">
        <Label x:Name="RoomNameLabel"
               Text="Room Name: "
               FontSize="Large" />
        <Label x:Name="AdminNameLabel"
               Text="Admin: "
               FontSize="Medium" />
        <ListView x:Name="UsersListView">
            <!-- ListView items will be filled programmatically -->
        </ListView>
        <Button Text="Refresh" Clicked="OnRefreshButtonClicked" />
        <Button Text="Back" Clicked="OnBackButtonClicked" />
    </StackLayout>
</ContentPage>
