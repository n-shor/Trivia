<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.StartPage"
			 NavigationPage.HasBackButton="False"
             BackgroundImageSource="Resources/personalStatisticsPageBG.jpg">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <StackLayout Padding="20">
        <Button Text="Login" BackgroundColor="MediumBlue" TextColor="White" Clicked="OnLoginButtonClicked"/>
        <Button Text="Signup" BackgroundColor="MediumBlue" TextColor="White" Clicked="OnSignupButtonClicked"/>
        <Button Text="Exit" BackgroundColor="MediumBlue" TextColor="White" Clicked="OnExitButtonClicked"/>
    </StackLayout>
</ContentPage>
