<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.StatisticsPage"
             NavigationPage.HasBackButton="False"
             BackgroundImageSource="Resources/statisticsPageBG.jpg">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <StackLayout Padding="20">
        <Button Text="Personal Statistics" BackgroundColor="MediumBlue" TextColor="White" Clicked="OnPersonalStatisticsButtonClicked"/>
        <Button Text="High Scores" BackgroundColor="MediumBlue" TextColor="White" Clicked="OnHighScoresButtonClicked"/>
        <Button Text="Back" BackgroundColor="MediumBlue" TextColor="White" Clicked="OnBackButtonClicked" />
    </StackLayout>
</ContentPage>
